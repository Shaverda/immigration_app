<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.3/jspdf.debug.js"></script>


<div class="container" id="documentInfoContainer">
	<div class = 'row'>
		<div class = 'col-md-12'>
			<p style='font-size: 20px;'>Now showing submitted survey data... </p>
		</div>
		<div class = 'col-md-3'>
    		<img id="uploadedPhoto" data-email= '{{data.email}}' style="height:150px; width:150px;" src=""/>
		</div>
		<div class = 'col-md-9'>
			<table>
				<tr>
					<td class="table-header-bold">User ID: </td>
					<td id="id">{{data.id}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">First Name: </td>
					<td id="first_name">{{data.first_name}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">Last Name: </td>
					<td id="last_name">{{data.last_name}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">Address: </td>
					<td>{{data.address}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">Apparmtent No.: </td>
					<td>{{data.apt_no}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">City: </td>
					<td>{{data.city}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">ZIP Code: </td>
					<td>{{data.zip}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">Date of birth:</td>
					<td>{{data.date_of_birth}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">Country of Birth:</td>
					<td>{{data.country_of_birth}}</td>
				</tr>		
				<tr>
					<td class="table-header-bold">Citizenship:</td>
					<td>{{data.country_of_citizenship}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">Social Security Number:</td>
					<td>{{data.social_security_num}}</td>
				</tr>

				<tr>
					<td class="table-header-bold">A-Number: </td>
					<td>{{data.a_number}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">Date of last arrival: </td>
					<td>{{data.date_of_last_arrival}}</td>
				</tr>
				<tr>
					<td class="table-header-bold">i94 Number:</td>
					<td>{{data.i94_arrival_departure_record_number}}</td>
				</tr><tr>
					<td class="table-header-bold">Current USCIS Status: </td>
					<td>{{data.current_uscis_status}}</td>
				</tr><tr>
					<td class="table-header-bold">Status Expires:</td>
					<td>{{data.status_expires_on}}</td>
				</tr>
			</table>
		</div>
	</div>
</div>
<div id="div-for-pdf-buttons">
	<button id="download" class="pdf-buttons">download the pdf</button>
	<button id="display_pdf" class="pdf-buttons">show me the pdf</button>
	<button id="hide_pdf" class="pdf-buttons" style="display:none">hide the pdf</button>
</div>

<div id="canvas-div">
	<canvas id="canvas" width="750" height="975" style="display:none"></canvas>
</div>
