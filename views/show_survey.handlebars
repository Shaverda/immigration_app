<div class="container" id="documentInfoContainer">
	<table>
		<tr>
			<td>User ID: </td>
			<td id="id">{{data.id}}</td>
		</tr>
		<tr>
			<td>First Name: </td>
			<td id="first_name">{{data.first_name}}</td>
		</tr>
		<tr>
			<td>Last Name: </td>
			<td id="last_name">{{data.last_name}}</td>
		</tr>
		<tr>
			<td>Address: </td>
			<td>{{data.address}}</td>
		</tr>
		<tr>
			<td>Apparmtent No.: </td>
			<td>{{data.apt_no}}</td>
		</tr>
		<tr>
			<td>City: </td>
			<td>{{data.city}}</td>
		</tr>
		<tr>
			<td>ZIP Code: </td>
			<td>{{data.zip}}</td>
		</tr>
		<tr>
			<td>Date of birth:</td>
			<td>{{data.date_of_birth}}</td>
		</tr>
		<tr>
			<td>Country of Birth:</td>
			<td>{{data.country_of_birth}}</td>
		</tr>		
		<tr>
			<td>Citizenship:</td>
			<td>{{data.country_of_citizenship}}</td>
		</tr>
		<tr>
			<td>Social Security Number:</td>
			<td>{{data.social_security_num}}</td>
		</tr>

		<tr>
			<td>A-Number: </td>
			<td>{{data.a_number}}</td>
		</tr>
		<tr>
			<td>Date of last arrival: </td>
			<td>{{data.date_of_last_arrival}}</td>
		</tr>
		<tr>
			<td>i94 Number:</td>
			<td>{{data.i94_arrival_departure_record_number}}</td>
		</tr><tr>
			<td>Current USCIS Status: </td>
			<td>{{data.current_uscis_status}}</td>
		</tr><tr>
			<td>Status Expires:</td>
			<td>{{data.status_expires_on}}</td>
		</tr>
	</table>
</div>
<button id="download">download the pdf</button>
<button id="display_pdf">show me the pdf</button>
<button id="hide_pdf" style="display:none">hide the pdf</button>

